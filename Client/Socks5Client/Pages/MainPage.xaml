<Page x:Class="Socks5Client.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Socks5Client.Pages"
      mc:Ignorable="d" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <hc:Card Margin="5" Effect="{StaticResource EffectShadow5}">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="开启代理" Style="{StaticResource ButtonWarning}"
                    Command="{Binding OpenProxyCommandAsync}"
                    Width="150" Height="40" Cursor="Hand"
                ></Button>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="50">
                <hc:Shield Subject="上传流量" Status="NULL" Color="#1182c3" Margin="0 0 10 0"/>
                <hc:Shield Subject="下载流量" Status="NULL"  Margin="10 0 0 0" Color="#d8624c"/>
            </StackPanel>
        </StackPanel>
    </hc:Card>
</Page>
